# Terraform Variables for Ainsley Dev Platform
# Copy this file to terraform.tfvars and update with your actual values
# Note: terraform.tfvars is gitignored for security
#
# ðŸ¤– CI/CD Note:
# GitHub Actions workflows use organization secrets instead of this file:
# - ORG_HETZNER_TOKEN (Hetzner API token)
# - ORG_BACK_BLAZE_KEY_ID (Backend state storage)
# - ORG_BACK_BLAZE_APPLICATION_KEY (Backend state storage)
# This file is only needed for local Terraform operations.

# Hetzner Cloud API Token
# Get from: https://console.hetzner.cloud/ -> Project -> Security -> API Tokens
hetzner_token = "your-hetzner-token-here"

# Admin email for Let's Encrypt SSL certificates
admin_email = "hello@ainsley.dev"

# Environment name
environment = "production"

# Project name (used for resource naming)
project_name = "ainsley-dev-platform"

# ===== Service Domains =====
# Configure domains for each monitoring service
# Make sure DNS A records point to the server IPs after deployment

# Peekaping monitoring service
peekaping_domain = "uptime.ainsley.dev"
